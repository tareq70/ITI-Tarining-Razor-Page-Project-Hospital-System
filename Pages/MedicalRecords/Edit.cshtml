@page
@model ITI_Tarining_Razor_Page_Project_Hospital_System.Pages.MedicalRecords.EditModel

@{
    ViewData["Title"] = "Edit Medical Record";
}

<h1 class="mb-4 text-center text-primary">✏️ Edit Medical Record</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-body p-4">
                <h4 class="card-title mb-3">🩺 Record Details</h4>
                <hr />

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="MedicalRecord.Id" />

                    <!-- Date -->
                    <div class="form-group mb-3">
                        <label asp-for="MedicalRecord.DateOfExamination" class="form-label fw-bold"></label>
                        <input asp-for="MedicalRecord.DateOfExamination" class="form-control" type="date" />
                        <span asp-validation-for="MedicalRecord.DateOfExamination" class="text-danger"></span>
                    </div>

                    <!-- Problem -->
                    <div class="form-group mb-3">
                        <label asp-for="MedicalRecord.Problem" class="form-label fw-bold"></label>
                        <textarea asp-for="MedicalRecord.Problem" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="MedicalRecord.Problem" class="text-danger"></span>
                    </div>

                    <!-- Patient -->
                    <div class="form-group mb-4">
                        <label asp-for="MedicalRecord.PatId" class="form-label fw-bold">Patient</label>
                        <select asp-for="MedicalRecord.PatId" class="form-select" asp-items="ViewBag.PatId"></select>
                        <span asp-validation-for="MedicalRecord.PatId" class="text-danger"></span>
                    </div>

                    <!-- Buttons -->
                    <div class="d-flex justify-content-between">
                        <a asp-page="./Index" class="btn btn-secondary">⬅️ Back</a>
                        <button type="submit" class="btn btn-primary">💾 Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
