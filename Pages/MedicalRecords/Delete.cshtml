@page
@model ITI_Tarining_Razor_Page_Project_Hospital_System.Pages.MedicalRecords.DeleteModel

@{
    ViewData["Title"] = "Delete Medical Record";
}

<h1 class="mb-4 text-center text-danger">🗑 Delete Medical Record</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-body p-4">
                <h4 class="card-title text-danger fw-bold mb-3">
                    ⚠️ Are you sure you want to delete this record?
                </h4>
                <hr />

                <!-- Patient Name -->
                <p class="mb-2">
                    <strong>👤 Patient:</strong><br />
                    @Model.MedicalRecord.Pat?.Name
                </p>

                <!-- Date -->
                <p class="mb-2">
                    <strong>📅 Date of Examination:</strong><br />
                    @Model.MedicalRecord.DateOfExamination.ToString("yyyy-MM-dd")
                </p>

                <!-- Problem -->
                <p class="mb-2">
                    <strong>🩺 Problem:</strong><br />
                    @Model.MedicalRecord.Problem
                </p>

                <form method="post" class="mt-4 d-flex justify-content-between">
                    <input type="hidden" asp-for="MedicalRecord.Id" />
                    <a asp-page="./Index" class="btn btn-secondary">⬅️ Cancel</a>
                    <button type="submit" class="btn btn-danger">🗑 Confirm Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
