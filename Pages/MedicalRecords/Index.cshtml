@page
@model ITI_Tarining_Razor_Page_Project_Hospital_System.Pages.MedicalRecords.IndexModel

@{
    ViewData["Title"] = "Medical Records";
}

<h1 class="mb-4 text-center">📋 Medical Records</h1>

<p class="text-end">
    <a asp-page="Create" class="btn btn-success shadow-sm">➕ Add New Record</a>
</p>

<div class="row">
    @foreach (var item in Model.MedicalRecord)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-lg border-0 rounded-3 h-100">
                <div class="card-body">
                    <!-- Patient Name -->
                    <h4 class="card-title text-primary fw-bold">
                        👤 @item.Pat?.Name
                    </h4>

                    <!-- Examination Date -->
                    <p class="text-muted mb-2">
                        📅 @item.DateOfExamination.ToString("yyyy-MM-dd")
                    </p>

                    <!-- Problem -->
                    <p class="card-text">
                        🩺 <strong>Problem:</strong> @item.Problem
                    </p>

                    <div class="d-flex justify-content-between mt-3">
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white">🔍 View</a>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">✏️ Edit</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">🗑 Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
