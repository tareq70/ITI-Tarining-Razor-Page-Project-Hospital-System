@page
@model ITI_Tarining_Razor_Page_Project_Hospital_System.Pages.Hospitals.DeleteModel

@{
    ViewData["Title"] = "Delete Hospital";
}

<div class="container mt-4">
    <div class="card shadow-sm p-4 mx-auto" style="max-width: 600px;">
        <h2 class="text-danger mb-3">Delete Hospital</h2>
        <hr />

        <h5 class="mb-3">Are you sure you want to delete this hospital?</h5>

        <dl class="row mb-4">
            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Hospital.Name)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Hospital.Name)</dd>

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Hospital.Address)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Hospital.Address)</dd>

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Hospital.City)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Hospital.City)</dd>
        </dl>

        <form method="post" class="d-flex gap-2">
            <input type="hidden" asp-for="Hospital.Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete
            </button>
            <a asp-page="./Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </form>
    </div>
</div>
