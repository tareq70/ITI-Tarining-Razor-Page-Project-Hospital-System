@page
@model ITI_Tarining_Razor_Page_Project_Hospital_System.Pages.Hospitals.IndexModel

@{
    ViewData["Title"] = "Hospitals";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Hospitals List</h2>
        <a asp-page="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>

    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Hospital[0].Name)</th>
                <th>@Html.DisplayNameFor(model => model.Hospital[0].Address)</th>
                <th>@Html.DisplayNameFor(model => model.Hospital[0].City)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Hospital)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Address)</td>
                    <td>@Html.DisplayFor(modelItem => item.City)</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">
                            <i class="bi bi-info-circle"></i> Details
                        </a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
