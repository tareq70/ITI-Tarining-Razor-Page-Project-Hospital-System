@page
@model ITI_Tarining_Razor_Page_Project_Hospital_System.Pages.Patients.DeleteModel

@{
    ViewData["Title"] = "Delete Patient";
}

<div class="card shadow-sm p-4">
    <h2 class="text-danger mb-3">
        <i class="bi bi-trash"></i> Delete Patient
    </h2>
    <hr />

    <h5 class="mb-3 text-secondary">Are you sure you want to delete this patient?</h5>

    <dl class="row">
        <dt class="col-sm-3 fw-bold">
            @Html.DisplayNameFor(model => model.Patient.Name)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Patient.Name)
        </dd>

        <dt class="col-sm-3 fw-bold">
            @Html.DisplayNameFor(model => model.Patient.Diagnosis)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Patient.Diagnosis)
        </dd>

        <dt class="col-sm-3 fw-bold">
            @Html.DisplayNameFor(model => model.Patient.Address)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Patient.Address)
        </dd>

        <dt class="col-sm-3 fw-bold">
            Hospital
        </dt>
        <dd class="col-sm-9">
            @Model.Patient.Hospital?.Name
        </dd>
    </dl>

    <form method="post" class="mt-3">
        <input type="hidden" asp-for="Patient.Id" />

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash-fill"></i> Delete
            </button>
            <a asp-page="./Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </form>
</div>
