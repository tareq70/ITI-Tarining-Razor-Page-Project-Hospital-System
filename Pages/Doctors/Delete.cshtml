@page
@model ITI_Tarining_Razor_Page_Project_Hospital_System.Pages.Doctors.DeleteModel

@{
    ViewData["Title"] = "Delete Doctor";
}

<div class="container mt-5">
    <h1>Delete Doctor</h1>
    <h5 class="text-danger">Are you sure you want to delete this?</h5>

    <div class="card mt-3 shadow-sm">
        <div class="card-body">
            <h4>Doctor Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Doctor.Name</dd>

                <dt class="col-sm-3">Qualification</dt>
                <dd class="col-sm-9">@Model.Doctor.Qualification</dd>

                <dt class="col-sm-3">Salary</dt>
                <dd class="col-sm-9">@Model.Doctor.Salary</dd>

                <dt class="col-sm-3">Hospital</dt>
                <dd class="col-sm-9">@Model.Doctor.Hos?.Name</dd>
            </dl>

            <form method="post" class="mt-3">
                <input type="hidden" asp-for="Doctor.Id" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
