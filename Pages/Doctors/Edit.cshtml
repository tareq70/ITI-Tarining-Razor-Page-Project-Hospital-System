@page
@model ITI_Tarining_Razor_Page_Project_Hospital_System.Pages.Doctors.EditModel

@{
    ViewData["Title"] = "Edit Doctor";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Edit Doctor</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Doctor.Id" />

                        <div class="mb-3">
                            <label asp-for="Doctor.Name" class="form-label"></label>
                            <input asp-for="Doctor.Name" class="form-control" />
                            <span asp-validation-for="Doctor.Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Doctor.Qualification" class="form-label"></label>
                            <input asp-for="Doctor.Qualification" class="form-control" />
                            <span asp-validation-for="Doctor.Qualification" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Doctor.Salary" class="form-label"></label>
                            <input asp-for="Doctor.Salary" class="form-control" />
                            <span asp-validation-for="Doctor.Salary" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Doctor.HosId" class="form-label">Hospital</label>
                            <select asp-for="Doctor.HosId" class="form-select" asp-items="@(ViewData["HosId"] as SelectList)"></select>
                            <span asp-validation-for="Doctor.HosId" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">Save Changes</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-page="./Index" class="btn btn-link">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
