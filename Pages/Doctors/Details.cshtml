@page
@model ITI_Tarining_Razor_Page_Project_Hospital_System.Pages.Doctors.DetailsModel

@{
    ViewData["Title"] = "Doctor Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Doctor Details</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9">@Model.Doctor.Name</dd>

                        <dt class="col-sm-3">Qualification</dt>
                        <dd class="col-sm-9">@Model.Doctor.Qualification</dd>

                        <dt class="col-sm-3">Salary</dt>
                        <dd class="col-sm-9">@Model.Doctor.Salary</dd>

                        <dt class="col-sm-3">Hospital</dt>
                        <dd class="col-sm-9">@Model.Doctor.Hos?.Name</dd>
                    </dl>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a asp-page="./Edit" asp-route-id="@Model.Doctor.Id" class="btn btn-primary">Edit</a>
                    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
